	Gm_Storage::setCounters( list=>$gmCounters, errHandler=>\&Gm_Web::displayAdminErrorExit );

	Gm_Core::writeToCplog("$AUTHOR{'author'} deleted a comment(s) \#".
		join(',',@del_ids)." from entry #$IN{'entryid'} ($thisentrysubject)");

#	&gm_editthisentry;
	
	editEntry( $message );
}

